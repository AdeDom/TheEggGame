<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="AppBarLayout" parent="MatchWrap">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="Toolbar" parent="MatchWrap">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="RelativeLayout" parent="MatchMatch">
        <item name="android:background">@drawable/shape_bg</item>
        <item name="android:padding">@dimen/large</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="LinearLayoutMain" parent="WrapWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutVertical" parent="LinearLayoutMain">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LinearLayoutHorizontal" parent="LinearLayoutMain">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LinearLayoutButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/shape_bg_linear</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextView" parent="WrapWrap">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextViewSmall" parent="TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="TextViewLarge" parent="TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#7986CB</item>
    </style>

    <style name="ImageViewLogo">
        <item name="android:layout_width">@dimen/imageLogo</item>
        <item name="android:layout_height">@dimen/imageLogo</item>
        <item name="android:src">@drawable/the_egg_game</item>
    </style>

    <style name="ImageViewPlayer">
        <item name="android:layout_width">@dimen/imagePlayer</item>
        <item name="android:layout_height">@dimen/imagePlayer</item>
        <item name="android:src">@drawable/ic_player</item>
    </style>

    <style name="Button" parent="WrapWrap">
        <item name="android:layout_marginTop">@dimen/large</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="EditText" parent="MatchWrap">
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_width">@dimen/mainLarge</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:background">@drawable/shape_edit</item>
    </style>

    <style name="EditTextPassword" parent="EditText">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>
