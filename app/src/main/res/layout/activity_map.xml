<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvRed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_bg_player_red"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/mTvBlue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/tv_red"
                android:background="@drawable/shape_bg_player_blue"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/mFab"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentLeft="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_margin="16dp"-->
<!--        app:srcCompat="@drawable/ic_chat_white"-->
<!--        tools:ignore="VectorDrawableCompat" />-->

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImgEggI"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg_1" />

        <ImageView
            android:id="@+id/mImgEggII"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg_2" />

        <ImageView
            android:id="@+id/mImgEggIII"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg_3" />

        <ImageView
            android:id="@+id/mImgEggIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg_4" />

        <ImageView
            android:id="@+id/mImgEggV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg_5" />
    </LinearLayout>
</RelativeLayout>