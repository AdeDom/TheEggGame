<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_fight_game"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/mTvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/mBtnOne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnTwo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnThree"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnFour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnFive"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnSix"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnSeven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnEight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />

        <Button
            android:id="@+id/mBtnNine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_btn_fight_gray" />
    </GridLayout>

    <Button
        android:id="@+id/mBtnGiveUp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Give up" />
</LinearLayout>
