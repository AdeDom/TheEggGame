<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/MatchWrap"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large">

    <LinearLayout
            style="@style/WrapWrap"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profile" />

        <Button
                android:id="@+id/mBtChangeProfile"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/change_profile" />
    </LinearLayout>

    <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/large"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_password" />

        <Button
                android:id="@+id/mBtChangePassword"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/change_password" />
    </LinearLayout>

    <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/large"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/mIvSoundMusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_sound_music_on" />

        <Button
                android:id="@+id/mBtSoundMusic"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/sound_amp_music" />
    </LinearLayout>

    <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/large"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logout" />

        <Button
                android:id="@+id/mBtLogout"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/logout" />
    </LinearLayout>

    <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/large"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_exit" />

        <Button
                android:id="@+id/mBtExit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/exit" />
    </LinearLayout>
</LinearLayout>
