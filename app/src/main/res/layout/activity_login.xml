<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/RelativeLayout"
        tools:context=".ui.activities.LoginActivity">

    <LinearLayout
            style="@style/LinearLayoutMain"
            android:layout_centerInParent="true">

        <ImageView
                style="@style/ImageViewLogo"
                android:contentDescription="@string/logo" />

        <TextView
                style="@style/TextViewLarge"
                android:text="@string/app_name"
                android:textSize="30sp" />

        <TextView
                style="@style/TextViewLarge"
                android:text="@string/log_in"
                android:textColor="@android:color/black" />

        <com.google.android.material.textfield.TextInputLayout style="@style/WrapWrap">

            <EditText
                    android:id="@+id/mEdtUsername"
                    style="@style/EditText"
                    android:hint="@string/username" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/WrapWrap">

            <EditText
                    android:id="@+id/mEdtPassword"
                    style="@style/EditTextPassword"
                    android:hint="@string/password" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/mBtnReg"
                    style="@style/Button"
                    android:text="@string/register" />

            <Button
                    android:id="@+id/mBtnLogin"
                    style="@style/Button"
                    android:layout_marginStart="@dimen/large"
                    android:text="@string/login" />
        </LinearLayout>

        <TextView
                android:id="@+id/mTvForgotPassword"
                style="@style/TextViewSmall"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/large"
                android:text="@string/forgot_your_password" />
    </LinearLayout>
</RelativeLayout>
