<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/RelativeLayoutItem">

    <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivImage"
                style="@style/ImageView"
                android:layout_weight="10" />

        <TextView
                android:id="@+id/tvName"
                style="@style/TextView"
                android:layout_marginStart="@dimen/medium"
                android:layout_weight="40"
                android:text="@string/name" />

        <GridLayout
                style="@style/WrapWrap"
                android:layout_weight="50"
                android:columnCount="2"
                android:rowCount="2">

            <TextView
                    android:id="@+id/tvDateIn"
                    style="@style/TextView"
                    android:text="@string/date_in" />

            <TextView
                    android:id="@+id/tvTimeIn"
                    style="@style/TextView"
                    android:layout_marginStart="@dimen/medium"
                    android:text="@string/time_in" />

            <TextView
                    android:id="@+id/tvDateOut"
                    style="@style/TextView"
                    android:text="@string/date_out" />

            <TextView
                    android:id="@+id/tvTimeOut"
                    style="@style/TextView"
                    android:layout_marginStart="@dimen/medium"
                    android:text="@string/time_out" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
